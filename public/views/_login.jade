#login
  form(name="loginForm", id="login_form")
  .form-group.row
    label.col-lg-3.col-md-3.col-md-3.control-label
    .col-lg-6.col-md-6
      input.form-control(type="text", 
      id="username", 
      placeholder="username",
      name="username", 
      ng-model="user.username", 
      required)
    .col-lg-3.col-md-3.col-md-3
      span(class="error-message",
      ng-show="!loginForm.username && loginForm.username.$dirty")
        | Username is required

  .row
    .col-lg-offset-3.col-lg-6.col-md-offset-3.col-md-6
      button(type="submit", value="Login", class="btn btn-primary", id="save",
      ng-click="login()",
      ng-disabled="!user.username") Login
